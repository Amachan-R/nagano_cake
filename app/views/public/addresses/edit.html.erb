<main>
  <div class="container">
    <div class="p-4">
      <h5 class="ml-5"><span class="border px-3 bg-light"><strong>配送先編集</strong></span></h5>
    </div>

    <div class="col-11">
      <%= form_with model:@address, local:true do |f| %>
        <div class="row">
          <p class="col-3">郵便番号(ハイフンなし)</p>
          <div class="col-2"><%= f.text_field :postal_code %></div>
        </div>

        <div class="row">
          <p class="col-3">住所</p>
          <div class="col-2"><%= f.text_field :address, :size => "50*30" %></div>
        </div>

        <div class="row">
          <p class="col-3">宛名</p>
          <div class="col-4"><%= f.text_field :name %></div>
          <div class="col-4 text-right"><%= f.submit '変更内容を保存', class: 'btn btn-success' %></div>
        </div>
      <% end %>
    </div>
  </div>
</main>