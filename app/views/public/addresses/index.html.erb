<main>
  <div class="container">
    <div class="p-4">
      <h5 class="ml-5"><span class="border px-3 bg-light"><strong>配送先登録/一覧</strong></span></h5>
    </div>

    <div class="col-11">
      <%= form_with model:@address, url:'/addresses', local:true do |f| %>
        <div class="row">
          <div class="col-3"><p>郵便番号(ハイフンなし)</p></div>
          <div class="col-4"><%= f.text_field :postal_code %></div>
        </div>

        <div class="row">
          <div class="col-3"><p>住所</p></div>
          <div class="col-4"><%= f.text_field :address, :size => "50*30" %></div>
        </div>

        <div class="row">
          <div class="col-3"><p>宛名</p></div>
          <div class="col-4"><%= f.text_field :name %></div>
          <div class="col-2"></div><%= f.submit '新規登録', class: 'btn btn-success px-4' %>
        </div><br /><br />
      <% end %>

      <div class="col-11 border border-dark">
        <div class="row">
          <div class="col-2 border border-dark pt-2 bg-light"><p>郵便番号</p></div>
          <div class="col-4 border border-dark pt-2 bg-light"><p>住所</p></div>
          <div class="col-2 border border-dark pt-2 bg-light"><p>宛名</p></div>
          <div class="col-4 border border-dark pt-2 bg-light"></div>
        </div>
        <% @addresses.each do |address| %>
          <div class="row">
            <div class="col-2 border border-dark pt-3"><%= address.postal_code %></div>
            <div class="col-4 border border-dark pt-3"><%= address.address %></div>
            <div class="col-2 border border-dark pt-3"><%= address.name %></div>
            <div class="col-4 border border-dark py-2"><%= link_to "編集する", "/addresses/#{address.id}/edit", class: 'btn btn-success' %>
              <%= link_to "削除する", "/addresses/#{address.id}", method: :delete, class: 'btn btn-danger' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>