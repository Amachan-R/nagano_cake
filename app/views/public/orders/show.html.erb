<main>
  <div class="container">
    <div class="p-4">
      <h5 class="ml-5"><span class="border px-3 bg-light"><strong>注文履歴詳細</strong></span></h5>
    </div>
    <div class="row">
      <p class="col-2"><strong>注文情報</strong></p>
      <p class="col-2 offset-6"><strong>請求情報</strong></p>
    </div>
    <div class="row">
      <div class="col-8">
        <div class="row">
          <div class="col-3 border border-dark pt-3 bg-light"><p>注文日</p></div>
          <div class="col-8 border border-dark pt-3"><p><%= @order.created_at %></p></div>
        </div>
        <div class="row">
          <div class="col-3 border border-dark pt-3 bg-light"><p class="mt-3">配送先</p></div>
          <div class="col-8 border border-dark pt-3"><p>〒<%= @order.postal_code %><br /><%= @order.address %><br /><%= @order.name %></p></div>
        </div>
        <div class="row">
          <div class="col-3 border border-dark pt-3 bg-light"><p>支払方法</p></div>
          <div class="col-8 border border-dark pt-3"><p><%= @order.payment_method %></p></div>
        </div>
        <div class="row">
          <div class="col-3 border border-dark pt-3 bg-light"><p>ステータス</p></div>
          <div class="col-8 border border-dark pt-3"><p><%= @order.status %></p></div>
        </div>
      </div>

      <div class="col-4">
        <div class="row">
          <div class="col-5 border border-dark pt-3 bg-light"><p>商品合計</p></div>
          <div class="col-5 border border-dark pt-3"><p><%= @order.total_payment-800 %></p></div>
        </div>
        <div class="row">
          <div class="col-5 border border-dark pt-3 bg-light"><p>配送料</p></div>
          <div class="col-5 border border-dark pt-3"><p>800</p></div>
        </div>
        <div class="row">
          <div class="col-5 border border-dark pt-3 bg-light"><p><strong>ご請求金額</strong></p></div>
          <div class="col-5 border border-dark pt-3"><p><%= @order.total_payment %></p></div>
        </div>
      </div>
    </div><br />

    <div class="col-10 border border-dark">
      <div class="row">
        <div class="col-5 border border-dark pt-3 bg-light"><p>商品</p></div>
        <div class="col-3 border border-dark pt-3 bg-light"><p>単価(税込)</p></div>
        <div class="col-2 border border-dark pt-3 bg-light"><p>個数</p></div>
        <div class="col-2 border border-dark pt-3 px-0 bg-light"><p>小計</p></div>
      </div>

      <% @order.order_details.each do |order_detail| %>
        <div class="row">
          <div class="col-5 border border-dark pt-3"><%= order_detail.item.name %></div>
          <div class="col-3 border border-dark pt-3"><%= order_detail.price %></div>
          <div class="col-2 border border-dark pt-3"><%= order_detail.amount %></div>
          <div class="col-2 border border-dark pt-3"><%= order_detail.price*order_detail.amount %></div>
        </div>
      <% end %>
    </div>
  </div>
</main>