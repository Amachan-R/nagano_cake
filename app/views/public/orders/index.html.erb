<main>
  <div class="container">
    <div class="p-4">
      <div class="row">
        <h5 class="col-4 ml-5"><span class="border px-3 bg-light"><strong>注文履歴一覧</strong></span></h5>
      </div>
    </div>

    <div class="col-12 border border-dark">
      <div class="row">
        <div class="col-2 border border-dark pt-3 bg-light"><p>注文日</p></div>
        <div class="col-3 border border-dark pt-3 bg-light"><p>配送先</p></p></div>
        <div class="col-2 border border-dark pt-3 bg-light"><p>注文商品</p></div>
        <div class="col-1 border border-dark pt-3 px-0 bg-light"><p>支払金額</p></div>
        <div class="col-2 border border-dark pt-3 bg-light"><p>ステータス</p></div>
        <div class="col-2 border border-dark pt-3 bg-light"><p>注文詳細</p></div>
      </div>

      <% @orders.each do |order| %>
        <div class="row">
          <div class="col-2 border border-dark pt-3"><%= order.created_at %></div>
          <div class="col-3 border border-dark pt-3">〒<%= order.postal_code %><br /><%= order.address %><br /><%= order.name %></div>
          <div class="col-2 border border-dark pt-3">
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %><br />
            <% end %>
          </div>
          <div class="col-1 border border-dark pt-3 pl-0"><%= order.total_payment %>円</div>
          <div class="col-2 border border-dark pt-3"><%= order.status %></div>
          <div class="col-2 border border-dark py-2"><%= link_to "表示する", order_path(order.id), class: 'btn btn-primary' %></div>
        </div>
      <% end %>
    </div>
  </div>
</main>