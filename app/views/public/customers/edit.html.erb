<main>
  <div class="container">
    <div class="p-4">
      <h5 class="ml-5"><span class="border px-3 bg-light"><strong>会員情報編集</strong></span></h5>
    </div>

    <div class="col-11">
      <%= form_with model:@customer, url:"/customers", local:true do |f| %>
      <div class="row">
        <div class="col-3"><p>氏名</p></div>
        <div class="col-3"><%= f.text_field :last_name %></div>
        <div class="col-3"><%= f.text_field :first_name %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>フリガナ</p></div>
        <div class="col-3"><%= f.text_field :last_name_kana %></div>
        <div class="col-3"><%= f.text_field :first_name_kana %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>郵便番号</p></div>
        <div class="col-3"><%= f.text_field :postal_code %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>住所</p></div>
        <div class="col-3"><%= f.text_field :address, :size => "60*10" %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>電話番号</p></div>
        <div class="col-3"><%= f.text_field :telephone_number %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>メールアドレス</p></div>
        <div class="col-3"><%= f.text_field :email %></div>
      </div><br />

      <div class="row">
        <div class="col-3 offset-3"><%= f.submit '編集内容を保存', class: 'btn btn-success text-center px-5' %></div>
        <div class="col-6"><%= link_to '退会する', customers_unsubscribe_path, class: 'btn btn-danger ml-5' %></div>
      <% end %>
    </div>
  </div>
</main>
