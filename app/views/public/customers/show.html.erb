<main>
  <div class="container">
    <div class="p-4">
      <h5 class="ml-5"><span class="border px-3 bg-light"><strong>マイページ</strong></span></h5>
    </div>

    <div><strong>登録情報</strong>
      <%= link_to '編集する', customers_edit_path, class: 'btn btn-success ml-3 px-3' %>
    </div><br/>

    <div class="col-8 border border-dark">
      <div class="row">
        <div class="col-3 border-right border-bottom border-dark bg-light"><p>氏名</p></div>
        <div class="col-9 border-bottom border-dark"><%= @customer.last_name %><%= @customer.first_name %></div>
      </div>
      <div class="row">
        <div class="col-3 border-right border-bottom border-dark bg-light"><p>カナ</p></div>
        <div class="col-9 border-bottom border-dark"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></div>
      </div>
      <div class="row">
        <div class="col-3 border-right border-bottom border-dark bg-light"><p>郵便番号</p></div>
        <div class="col-9 border-bottom border-dark"><%= @customer.postal_code %></div>
      </div>
      <div class="row">
        <div class="col-3 border-right border-bottom border-dark bg-light"><p>住所</p></div>
        <div class="col-9 border-bottom border-dark"><%= @customer.address %></div>
      </div>
      <div class="row">
        <div class="col-3 border-right border-bottom border-dark bg-light"><p>電話番号</p></div>
        <div class="col-9 border-bottom border-dark"><%= @customer.telephone_number %></div>
      </div>
      <div class="row">
        <div class="col-3 border-right border-dark bg-light"><p>メールアドレス</p></div>
        <div class="col-9"><%= @customer.email %></div>
      </div>
    </div><br />
    <div class="row">
      <div class="col-2"><P><strong>配送先</strong></P></div>
      <div class="col-2"><%= link_to '一覧を見る', addresses_path, class: 'btn btn-primary' %></div>
    </div><br />
    <div class="row">
      <div class="col-2"><P><strong>注文履歴</strong></P></div>
      <div class="col-2"><%= link_to '一覧を見る', orders_path, class: 'btn btn-primary' %></div>
    </div>
  </div>
</main>