<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-3">
        <div class="border border-dark mt-5 pb-5">
          <div class="border-bottom border-dark">
            <h5 class="text-center"><strong>ジャンル検索</strong></h5>
          </div>
          <% @genres.each do |genre| %>
          <div class="p-2"><%= genre.name %></div>
          <% end %>
        </div>
      </div>
      <div class="col-4 pt-3">
        <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %>
      </div>
      <div class="col-5 pt-5">
        <h1><%= @item.name %></h1><br />
        <h3><%= @item.introduction %></h3><br />
        <h3><strong>￥<%= (@item.price*1.1).to_i %></strong>(税込)</h3><br />

        <%= form_with model: @cart_item, url: '/cart_items', local:true do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.number_field :amount, min: 1, max: 10, placeholder: "個数選択", class: 'w-25' %>
          <%= f.submit 'カートに入れる', class: 'btn btn-success ml-3' %>
        <% end %>
      </div>
    </div>
  </div>
</main>