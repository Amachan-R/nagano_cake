<main>
  <h2>注文履歴一覧</h2>

  <table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><span><%= order.created_at %></span></td>
          <td><span><%= order.customer.name %></span></td>
          <td><span></span></td>
          <td><span><%= order.status %></span></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</main>