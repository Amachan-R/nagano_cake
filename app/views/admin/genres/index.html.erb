<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-9">
        <div class="m-5"></div>
        <h5><span class="ml-5 border px-3 bg-light"><strong>ジャンル一覧・追加</strong></span></h5>
        <div class="m-5"></div>
        <%= form_with model:@genre, url:'/admin/genres', local:true do |f| %>
          <div class="row">
            <p class="col-2">ジャンル名</p>
            <div class="col-4">
              <%= f.text_field :name %>
            </div>
            <div class="col-3">
            <%= f.submit '新規登録', class: 'ml-3 btn btn-success px-3' %>
            </div>
          </div>
        <% end %>
        <div class="m-5"></div>
        <table class="table col-5 border-bottom">
          <thead>
            <tr class="table-secondary">
              <th class="pl-5">ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><span><%= genre.name %></span></td>
                <td><%= link_to "編集する", "/admin/genres/#{genre.id}/edit", class: "btn btn-success ml-5" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>