<main>
  <div class="container">
    <div class="p-4">
      <div class="row">
        <h5 class="col-3 ml-5"><span class="border px-3 bg-light"><strong>会員一覧</strong></span></h5>
      </div><br />

      <div class="row">
        <div class="mx-auto col-11 col-sm-10 col-lg-10 col-xl-8">
          <table class="table border-bottom border-dark">
            <thead>
              <tr class="table-secondary">
                <th class="border-top border-dark">会員ID</th>
                <th class="border-top border-dark">氏名</th>
                <th class="border-top border-dark">メールアドレス</th>
                <th class="border-top border-dark">ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <td class="border-top border-dark"><span><%= customer.id %></span></td>
                  <td class="border-top border-dark">
                    <%= link_to(admin_customer_path(customer.id)) do %>
                      <span><%= customer.last_name %><%= customer.first_name %></span>
                    <% end %>
                  </td>
                  <td class="border-top border-dark"><span><%= customer.email %></span></td>
                  <td class="border-top border-dark">
                    <% if customer.is_active == true %>
                      <p class="text-success"><strong>有効</strong></p>
                    <% else %>
                      <p class="text-black-50"><strong>退会</strong></p>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="d-flex justify-content-center"><%= paginate @customers %></div>
        </div>
      </div>
    </div>
  </div>
</main>