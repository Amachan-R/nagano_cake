<main>
  <div class="container">
    <div class="p-4">
      <h5 class="ml-5"><span class="border px-3 bg-light">
        <strong><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</strong></span>
      </h5>
    </div>

    <div class="col-11">
      <%= form_with model:@customer, url: admin_customer_path(@customer), local:true do |f| %>
      <div class="row">
        <div class="col-3"><p>会員ID</p></div>
        <div class="col-3"><%= @customer.id %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>氏名</p></div>
        <div class="col-3"><%= f.text_field :last_name %></div>
        <div class="col-3"><%= f.text_field :first_name %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>フリガナ</p></div>
        <div class="col-3"><%= f.text_field :last_name_kana %></div>
        <div class="col-3"><%= f.text_field :first_name_kana %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>郵便番号</p></div>
        <div class="col-3"><%= f.text_field :postal_code %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>住所</p></div>
        <div class="col-3"><%= f.text_area :address, :size => "60*10" %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>電話番号</p></div>
        <div class="col-3"><%= f.text_field :telephone_number %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>メールアドレス</p></div>
        <div class="col-3"><%= f.text_field :email %></div>
      </div>

      <div class="row">
        <div class="col-3"><p>会員ステータス</p></div>
        <div class="col-3">
          <%= f.radio_button :is_active, true, checked: true %>有効<%= f.radio_button :is_active, false %>退会
        </div>
      </div><br />

      <div class="row">
        <div class="col-3 offset-3"><%= f.submit '変更を保存', class: 'btn btn-success text-center px-5' %></div>
      </div>
      <% end %>
    </div>
  </div>
</main>