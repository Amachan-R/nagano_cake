<main>
  <h2>商品編集</h2>

  <%= form_with model:@item, url:"/admin/items/#{@item.id}", local:true do |f| %>
    <p>商品画像</p>
    <%= f.attachment_field :image %>
    <p>商品名</p>
    <%= f.text_field :name %>
    <p>商品説明</p>
    <%= f.text_area :introduction %>
    <p>ジャンル</p>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %>
    <p>税抜き価格</p>
    <%= f.text_field :price %>
    <p>販売ステータス</p>
    <%= f.radio_button :is_active, "販売中", checked: true %>販売中<%= f.radio_button :is_active, "販売停止中" %>販売停止中

    <%= f.submit '変更を保存' %>
  <% end %>

</main>