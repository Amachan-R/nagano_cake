<main>
  <div class="container">
    <div class="p-4">
      <h5 class="ml-5"><span class="border px-3 bg-light"><strong>商品新規登録</strong></span></h5>
    </div>
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <%= form_with model:@item, url:"/admin/items", local:true do |f| %>
          <div class="row">
            <p class="col-3">商品画像</p>
            <div class="col-4"><%= f.attachment_field :image %></div>
          </div>
          <div class="row">
            <p class="col-3">商品名</p>
            <div class="col-4"><%= f.text_field :name, size: 30 %></div>
          </div>
          <div class="row">
            <p class="col-3">商品説明</p>
            <div class="col-4"><%= f.text_area :introduction, size: "33x5" %></div>
          </div>
          <div class="row">
            <p class="col-3">ジャンル</p>
            <div class="col-4"><%= f.select(:genre_id, [ ["ケーキ",1], ["プリン", 2], ["焼き菓子", 3 ] ,["キャンディ", 4] ], prompt: "選択してください") %></div>
          </div>
          <div class="row">
            <p class="col-3">税抜き価格</p>
            <div class="col-4"><%= f.text_field :price, size: 30 %></div>
            <p class="col-2 ml-5">円</p>

          </div>
          <div class="row">
            <p class="col-3">販売ステータス</p>
            <div class="col-4"><%= f.radio_button :is_active, "販売中", checked: true %>販売中 　<%= f.radio_button :is_active, "販売停止中" %>販売停止中</div>
          </div>
          <div class="col-5 mx-auto"><%= f.submit '新規登録', class: 'btn btn-success' %></div>
        <% end %>
      </div>
    </div>
  </div>
</main>