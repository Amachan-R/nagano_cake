<main>
  <div class="container">
    <div class="p-4">
      <div class="row">
        <h5 class="col-3 ml-5"><span class="border px-3 bg-light"><strong>商品一覧</strong></span></h5>
        <div class="col-7 text-right"><%= link_to '+', "/admin/items/new", class: 'btn rounded-circle shadow' %></div>
      </div>
    </div><br />

    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-10 col-xl-8">
        <table class="table border-bottom border-dark">
          <thead>
            <tr class="table-secondary">
              <th class="border-top border-dark">商品ID</th>
              <th class="border-top border-dark">商品名</th>
              <th class="border-top border-dark">税抜価格</th>
              <th class="border-top border-dark">ジャンル</th>
              <th class="border-top border-dark">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td class="border-top border-dark"><span><%= item.id %></span></td>
                <td class="border-top border-dark"><span class="border-bottom border-dark">
                  <%= link_to (admin_item_path(item.id)) do %>
                      <span><%= item.name %></span>
                  <% end %>
                </td>
                <td class="border-top border-dark"><span><%= item.price %></span></td>
                <td class="border-top border-dark"><span><%= item.genre.name %></span></td>
                <td class="border-top border-dark">
                  <% if item.is_active == true %>
                    <p class="text-success"><strong>販売中</strong></p>
                  <% else %>
                    <p class="text-black-50"><strong>販売停止中</strong></p>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex justify-content-center"><%= paginate @items %></div>
      </div>
    </div>
  </div>
</main>